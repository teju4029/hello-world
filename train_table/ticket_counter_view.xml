<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="train_counter_form" model="ir.ui.view">
            <field name="name">Reservation Counter</field>
            <field name="model">ticket.counter</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Regervation Counter">
                    <header>
                        <button name="cancel_reservation" type="object" string="Cancel" states="confirm"/>
                        <button name="confirm_resservation" type="object" string="Confirm" class="oe_highlight" states="draft"/>

                        <field name="state" widget="statusbar"/>
                    </header>

                    <sheet>
                        <div>
                            <h1>
                                <field name="number" readonly="1"/>
                            </h1>
                        </div>
                        <group col="4">
                            <field name="name"/>
                            <field name="age"/>
                            <field name="gender"/>
                            <field name="origin"/>
                            <field name="designation"/>
                            <field name="train_times" options="{'no_create_edit': True, 'no_create': True}"/>
                            <field name="price"/>
                            <field name="total_pass_no"/>
                            <field name="subtotal"/>
                        </group>
                     </sheet>
                </form>
            </field>
        </record>

        <record id="ticket_counter_tree" model="ir.ui.view">
            <field name="name">Reservation Counter</field>
            <field name="model">ticket.counter</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Reservation counter">
                            <field name="name"/>
                            <field name="origin"/>
                            <field name="designation"/>
                </tree>
            </field>
        </record>
        <record id="ticket_counter_action" model="ir.actions.act_window">
            <field name="name">Reservation Counter</field>
            <field name="res_model">ticket.counter</field>
            <field name="view_type">form</field>
            <field name="mode">tree,form</field>
            <field name="view_id" ref="ticket_counter_tree"/>
        </record>
        <menuitem id="ticket_counter_menu" name="Reservation Counter"/>
        <menuitem id="ticket_counter_menu_side" action="ticket_counter_action" name="Reservation Counter" parent="ticket_counter_menu"/>


    </data>
</openerp>