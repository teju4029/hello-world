<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
        <record id="train_route_form" model="ir.ui.view">
            <field name="name">Train Route</field>
            <field name="model">train.route</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="TRAIN ROUTE">
                    <sheet>
                        <group>
                            <field name="station_name"/>
                            <field name="station_code"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="train_route_action" model="ir.actions.act_window">
            <field name="name">Train Route</field>
            <field name="res_model">train.route</field>
            <field name="view_type">form</field>
            <field name="mode">form</field>
            <field name="view_id" ref="train_route_form"/>
        </record>
        <menuitem id="train_route_menu_side" action="train_route_action" name="Train Route" parent="ticket_counter_menu"/>


        <!-- boarding details-->

        <record id="boarding_form" model="ir.ui.view">
            <field name="name">Boarding names</field>
            <field name="model">board.details</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="TRAIN ROUTE">
                    <sheet>
                        <group>
                            <field name="b_station"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="boarding_action" model="ir.actions.act_window">
            <field name="name">Boarding names</field>
            <field name="res_model">board.details</field>
            <field name="view_type">form</field>
            <field name="mode">form</field>
            <field name="view_id" ref="boarding_form"/>
        </record>
        <menuitem id="boarding_menu_side" action="boarding_action" name="Boarding names" parent="ticket_counter_menu"/>


        <!-- desig details -->

        <record id="desti_form" model="ir.ui.view">
            <field name="name">destination names</field>
            <field name="model">desti.details</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="TRAIN ROUTE">
                    <sheet>
                        <group>
                            <field name="d_station"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="desti_action" model="ir.actions.act_window">
            <field name="name">destination names</field>
            <field name="res_model">desti.details</field>
            <field name="view_type">form</field>
            <field name="mode">form</field>
            <field name="view_id" ref="desti_form"/>
        </record>
        <menuitem id="desti_menu_side" action="desti_action" name="Destination names" parent="ticket_counter_menu"/>

    </data>
</openerp>