<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="train_train_form" model="ir.ui.view">
            <field name="name">Train Timings</field>
            <field name="model">train.train</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Train Timings">
                    <sheet>
                        <!--
                        <div>
                           <h1>
                            <field name="name" readonly="1"/>
                           </h1>
                        </div>
                        -->

                        <group col="4">
                            <field name="train_no"/>
                            <field name="train_name"/>
                            <field name="date"/>
                            <field name="train_routes"/>
                        </group>
                        <notebook>
                        <page string="Ticket Details">
                            <field name="ticket_details" nolabel="1" colspan="4">
                            <tree editable="bottom">
	                            <field name="train_id" invisible="1"/>
                                <field name="reservation_id" invisible="1"/>
                                <field name="name"/>
	                            <field name="origin"/>
                                <field name="price"/>
                                <field name="total_pass_no"/>
                                 <field name="subtotal"/>
                                <field name="state"/>
	                         </tree>
                            </field>
                        </page>
                    </notebook>
                        <group class="oe_subtotal_footer oe_right">
							 <field name="total" class="oe_subtotal_footer_seperator"/>
						 </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="train_train_tree" model="ir.ui.view">
            <field name="name">Train Timings</field>
            <field name="model">train.train</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Train Timings">
                    <field name="train_no"/>
                    <field name="train_name"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>


        <record id="train_train_action" model="ir.actions.act_window">
            <field name="name">Train Timings</field>
            <field name="res_model">train.train</field>
            <field name="view_type">form</field>
            <field name="mode">tree,form</field>
            <field name="view_id" ref="train_train_tree"/>
        </record>

        <menuitem id="train_train_menu_side" action="train_train_action" name="Train Timings" parent="ticket_counter_menu"/>



        <!-- sales orderr      -->


        <record id="sales_order_view_form" model="ir.ui.view">
            <field name="name">sale.order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="ref"/>
                </xpath>
                <xpath expr="//page[1]" position="after">
                        <page string="Reservation">
                            <field name="reservation_details" nolabel="1" colspan="4">
                            <tree>
                                <field name="train_times"/>
                                <field name="reservation_id" invisible="1"/>
                                <field name="name"/>
	                            <field name="origin"/>
                                <field name="designation"/>
                                <field name="price"/>
                                <field name="total_pass_no"/>
                                <field name="subtotal"/>
	                         </tree>
                                <form>
                                    <group col="4">
                                        <field name="train_times"/>
                                        <field name="reservation_id" invisible="1"/>
                                        <field name="name"/>
	                                    <field name="origin"/>
                                        <field name="designation"/>
                                        <field name="price"/>
                                        <field name="total_pass_no"/>
                                        <field name="subtotal"/>
                                    </group>
	                         </form>
                            </field>
                        </page>

                </xpath>
            </field>
        </record>
    </data>
</openerp>