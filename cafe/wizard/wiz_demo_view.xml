<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
        <record id="wiz_demo_form" model="ir.ui.view">
            <field name="name">Wizard Demo</field>
            <field name="model">wiz.demo</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="WIZARD DEMO">
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                            <field name="date"/>
                            <field name="qty"/>
                            <field name="total_price"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="wiz_demo_action" model="ir.actions.act_window">
            <field name="name">Wizard Demo</field>
            <field name="res_model">wiz.demo</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="wiz_demo_menu_side" action="wiz_demo_action" name="Wizard Demo" parent="menu_cafe_top"/>
    </data>
</openerp>