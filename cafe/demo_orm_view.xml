<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
        <record id="demo_form_view" model="ir.ui.view">
            <field name="name">demo orm</field>
            <field name="model">demo.orm</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="DEMO ORM FORM">
                    <sheet>
                        <group col="4">
                            <field name="name"/>
	                        <field name="partner_id" domain="[('customer','=',True)]"/>
	                        <field name="description"/>
                        </group>
                        <notebook>
                             <page string="Item Lines">
                               <field name="item_line" nolabel="1" colspan="4">
                                 <tree editable="top">
                                  <field name="product_id"/>
                                  <field name="qty"/>
                                  <field name="price"/>
                                  <field name="subtotal"/>
                                  <field name="cafe_id" invisible="1"/>
                                 </tree>
                               </field>
                             </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="demo_tree_view" model="ir.ui.view">
            <field name="name">demo orm</field>
            <field name="model">demo.orm</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="De5mo ORM TREE">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="demo_action_view" model="ir.actions.act_window">
            <field name="name">Demo orm</field>
            <field name="res_model">demo.orm</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="demo_tree_view"></field>
        </record>
        <menuitem id="demo_menu_side" action="demo_action_view" name="Demo Orm" parent="menu_cafe_top"/>
    </data>
</openerp>